<Window x:Class="DatPlex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkit2="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mainview="clr-namespace:DatPlex.GUI.Main_Window"
        xmlns:common="clr-namespace:DatPlex.Common"
        Title="Plex User Update" Width="750" Height="500" Icon="/Images/plex_icon.png"
        BorderBrush="Black" BorderThickness="4" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding File_ExitCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <!--UserControl Visibility="{Binding ScanTabVisibility}">
            <mainview:ScanView x:Name="_ScanView"/>
        </>
        <UserControl Visibility="{Binding LibraryTabVisibility}">
            <mainview:LibraryView x:Name="_LibraryView"/>
        </UserControl>
        <UserControl Visibility="{Binding FriendsTabVisibility}">
            <mainview:FriendsView x:Name="_FriendsView"/>
        </UserControl-->
        <TabControl Foreground="White" SelectedIndex="{Binding SelectedTabIndex}">
            <TabItem Header="   Scan    ">
                <mainview:ScanView x:Name="_ScanView"/>
            </TabItem>
            <TabItem Header=" Libraries ">
                <mainview:LibraryView x:Name="_LibraryView"/>
            </TabItem>
            <TabItem Header="  Friends  ">
                <mainview:FriendsView x:Name="_FriendsView"/>
            </TabItem>
        </TabControl>
    </Grid>
    
</Window>
